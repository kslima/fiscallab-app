@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <div class="col-auto">
                <button type="button" class="btn btn-success bg-opacity-75" @onclick="NewVisit">Nova Visita</button>
            </div>
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code {
    private void NewVisit()
    {
        NavigationManager.NavigateTo("/new-visit");
    }
}