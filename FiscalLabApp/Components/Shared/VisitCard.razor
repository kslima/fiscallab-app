<div class="visit-card-component">

    <div class="visit-card-container">
        <div class="visit-card-left">
            <div class="title-text">
                @($"{Visit.BasicInformation.Plant?.Name} ({Visit.BasicInformation.Plant?.Address.City} - {Visit.BasicInformation.Plant?.Address.State})")
            </div>

            <div class="subtitle-text">
                @($"{Visit.BasicInformation.Association?.Name} ({Visit.BasicInformation.Association?.Address.City} - {Visit.BasicInformation.Association?.Address.State})")
            </div>

            <div class="subtitle-text">
                @($"Criado em: {Visit.CreatedAt.ToLocalTime():dd/MM/yyyy HH:mm:ss}")
            </div>

            <div class="subtitle-text">
                @if (Visit.SyncedAt != null)
                {
                    @($"Sincronizado em: {Visit.SyncedAt.Value.ToLocalTime():dd/MM/yyyy HH:mm:ss}")
                }
                else
                {
                    @("Sincronizado em: - ")
                }
            </div>

            @if (Visit.NotifiedByEmailAt != null)
            {
                <div class="subtitle-text">
                    @($"Enviado por e-mail em: {Visit.NotifiedByEmailAt.Value.ToLocalTime():dd/MM/yyyy HH:mm:ss}")
                </div>
            }

        </div>
        <div class="visit-card-right">
            <div class="visit-card-right">
                <span class="badge">
                    @($"{_pendingItemsCount} de {_totalItemsCount}")
                </span>

            </div>

        </div>
    </div>
