@page "/"
@page "/visits"

@using FiscalLabApp.Enums
@using FiscalLabApp.Components.Shared.VisitComponents

<PageTitle>Visitas</PageTitle>

<div class="home-container">
    <div class="btn-group d-flex mb-3">
        <HomeTabButton
            Title="Em andamento"
            IsSelected="@(IsSelectedTab(OfflineVisitsTabName))"
            OnTabSelected="@(() => SetSelectedTab(OfflineVisitsTabName))"/>

        <HomeTabButton
            Title="Finalizadas"
            IsSelected="@(IsSelectedTab(OnlineVisitsTabName))"
            OnTabSelected="@(() => SetSelectedTab(OnlineVisitsTabName))"
            IsDisabled="@ApplicationContextAccessor.IsOffline()"/>
    </div>

    <ModalDialog
        @ref="_imagesModalDialog"
        Title="Imagens">
        <ImageSelectorComponent
            Images="@_selectedVisitImages"
            IsProcessing="_isImagesProcessing"
            OnSaveButtonClick="OnSaveImagesButtonClickHandler">
        </ImageSelectorComponent>
    </ModalDialog>

    <div class="visit-cards-container">
        <Virtualize Items="_visits">
            <ItemContent>
                <VisitCard
                    Visit="@context"
                    OnDelete="OnDeleteButtonClickHandler"
                    OnOpenEditVisitPage="OpenVisitButtonClickHandler"
                    OnGeneratePdf="OnPdfButtonClickHandler"
                    OnSendByEmail="OnSendToEmailButtonClickHandler"
                    OnOpenAddImageModal="OpenImagesClickHandler"
                    AddImageButtonDisabled="@ApplicationContextAccessor.IsOffline()">
                </VisitCard>
            </ItemContent>
        </Virtualize>
    </div>

    @if (ActiveTab.Equals(OnlineVisitsTabName)  && _hasNextPage)
    {
        <div class="online-visits-loading-button-container">
            <LoadingButton 
                Title="Carregar mais visitas"
                OnClick="LoadingOnlineVisitsAsync"
                StyleType="ButtonStyle.Success"
                IsLoading="_isGetOnlineVisitsProcessing"></LoadingButton>
        </div>
    }

    <div class="new-visit-container">
        <button class="new-visit-button" @onclick="NewVisit">
            Nova Visita
        </button>
    </div>
</div>