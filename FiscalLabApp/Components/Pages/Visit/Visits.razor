@page "/visits"

@inject IVisitService VisitService
@inject NavigationManager NavigationManager

<PageTitle>Visitas</PageTitle>
<div class="mb-5">
    <div class="btn-group d-flex justify-content-between mb-2" role="group" aria-label="Basic radio toggle button group">
        <input type="radio" class="btn-check" name="btnradio" id="recentVisitsButtonId" autocomplete="off" checked>
        <label class="btn btn-outline-secondary" for="recentVisitsButtonId">Recentes</label>
        <input type="radio" class="btn-check" name="btnradio" id="allVisitsButtonId" autocomplete="off">
        <label class="btn btn-outline-secondary" for="allVisitsButtonId">Todas</label>
    </div>
    <div class="d-flex justify-content-end fixed-bottom mb-4 me-3">
        <button class="btn btn-success rounded btn-lg fw-bolder" @onclick="NewVisit">
            Nova Visita
        </button>
    </div>
    @foreach (var visit in _visits)
    {
        <div class="card mb-3 border border-white rounded">
            <div class="card-body">
                <div class="row d-flex justify-content-between">

                    <div class="card border-white rounded" style="width: 48px; background-color: #f9f9f9;">
                        <img src="plant.svg" alt="plant" style="width: 38px;" @onclick="() => EditVisit(visit.Id)">
                    </div>

                    <div class="col text-truncate">
                        <div class="row">
                            <div class="d-flex justify-content-between" style="font-size: 1em;">
                                <span class="fw-bolder text-truncate">@($"{visit.Plant.Name} ({visit.Plant.City} - {visit.Plant.State})")</span>
                                <span class="badge" style="background-color: indianred;">Pendente</span>
                            </div>
                            <small class="text-muted" style="font-size: 0.750em;">@($"{visit.CreatedAt:dd/MM/yyyy HH:mm:ss}")</small>
                        </div>
                    </div>

                </div>

                @* <div class="row d-flex justify-content-between mt-2">  *@
                @*     <button class="col btn btn-outline-secondary btn-sm" type="button" @onclick="() => EditVisit(visit.Id)">Editar</button> *@
                @*     <button class="col btn btn-outline-danger btn-sm" type="button" @onclick="() => EditVisit(visit.Id)">Excluir</button> *@
                @* </div> *@
                
                <div class="progress row mt-4" role="progressbar" aria-label="Danger example" aria-valuenow="100"
                     aria-valuemin="0" aria-valuemax="100" style="height: 8px">
                    <div class="progress-bar bg-secondary" style="width: 75%"></div>
                </div>

                <div class="row mt-1 fw-bolder" style="font-size: 0.750em;">
                    32 Concluídos de 80.
                </div>
            </div>
        </div>
    }
</div>


@code {
    private List<Visit> _visits = new();

    protected override async Task OnInitializedAsync()
    {
        _visits = await VisitService.GetAllAsync();
    }

    private void NewVisit()
    {
        NavigationManager.NavigateTo("/new-visit");
    }

    private void EditVisit(string visitId)
    {
        NavigationManager.NavigateTo($"/main-visit/{visitId}");
    }

}