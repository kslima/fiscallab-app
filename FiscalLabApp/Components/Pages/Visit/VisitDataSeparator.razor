<div class="card mb-3">
    <div class="card-header" style="font-size: 14px;">@Title</div>
    <div class="card-body p-1">
        @ChildContent
    </div>
</div>

@code
{
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
